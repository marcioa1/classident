<% content_for :main do %>
<fieldset>
<legend>Editando trabalho protético : <b><%= @paciente.nome %></b></legend>

<% form_for(@trabalho_protetico) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :protetico_id %><br />
    <%= f.select :protetico_id, @proteticos, {}, :onchange=>"escolheu_protetico();" %>
  </p>
  <p>
    <%= f.label :dentista_id %><br />
    <%= f.select :dentista_id, @dentistas %>
  </p>
  <p>
    <%= f.label :dente %><br />
    <%= f.text_field :dente, :size=>10 %>
  </p>
  <p>
    <%= f.label :data_de_envio %><br />
    <%= text_field_tag :datepicker, @trabalho_protetico.data_de_envio.to_s_br, :size=>10 %>
  </p>
  <p>
    <%= f.label :data_prevista_de_devolução %><br />
    <%= text_field_tag :datepicker2, @trabalho_protetico.data_prevista_de_devolucao.to_s_br, :size=>10 %>
  </p>
  <p>
    <%= f.label :data_de_devolução %><br />
    <%= text_field_tag :datepicker3, @trabalho_protetico.data_de_devolucao.to_s_br, :size=>10 %>
  </p>
  <p>
    <%= f.label :tabela_protetico_id %><br />
    <%= f.select :tabela_protetico_id,@trabalho_protetico.protetico.tabela_proteticos.collect{|obj| [obj.descricao,obj.id]}.sort,{}, :onchange=>"escolheu_item_da_tabela();" %>
  </p>
  <p>
    <%= f.label :valor %><br />
    <%= f.text_field :valor, :size=>8 %>
  </p>
  <p>
    <%= f.label :cor %><br />
    <%= f.text_field :cor, :size=>8 %>
  </p>
  <p>
   	<%= f.label :observações %><br />
    <%= f.text_area :observacoes, :rows=>3, :columns=>50 %>
  </p>
<fieldset><legend> Repetição </legend>
  <p>
    <%= f.label :data_de_repeticao %><br />
    <%= text_field_tag :datepicker4, @trabalho_protetico.data_de_repeticao.to_s_br, :size=>10 %>
  </p>
  <p>
    <%= f.label :motivo_da_repeticao %><br />
    <%= f.text_field :motivo_da_repeticao %>
  </p>
  <p>
    <%= f.label :data_prevista_da_devolucao_da_repeticao %><br />
    <%= text_field_tag :datepicker5, @trabalho_protetico.data_prevista_da_devolucao_da_repeticao.to_s_br, :size=>10 %>
  </p>
</fieldset>
  <p>
    <%= f.submit 'Salvar' %>
  </p>
<% end %>

<%= link_to 'voltar', abre_pacientes_path(@trabalho_protetico.paciente) %>
</fieldset>
<% end %>