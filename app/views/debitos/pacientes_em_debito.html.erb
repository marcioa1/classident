<% content_for :main do %>
  <h3>Pacientes em d√©bito</h3>
  <table>
	<tr>
	  <th>Paciente</th>
	  <th>Saldo devedor</th>
	</tr>
  <% total = 0.0 %>
  <% @em_debito.each() do |pac| %>
    <tr>
	  <td><%= pac.nome %></td>
	  <td align="right" style="color:red;"><%= pac.saldo.real %></td>
	  <% total += pac.saldo %>
    </tr>
  <% end %>
  <tr>
	<td>Total</td>
	<td align="right" style="color:red;"><%= total.real %></td>
  </tr>
  </table>
<% end %>