<% content_for :main do %>
  <h3>Pacientes em d√©bito</h3>
  <fieldset class='fieldset_50'>
  <% form_tag :url=>pacientes_em_debito_debitos_path do %>
    <% cont = 0 %>
    <table class='transparente'>
      <% @tabelas.each() do |tab| %>
        <% if cont % 5 == 0 %>
          </tr><tr>
        <% end %>
        <td><%= check_box_tag "tabela_#{tab.id}",value = tab.id,false %>  
        <%= tab.nome %> </td>
        <% cont += 1%>
       <% end %>
    </tr>
    <tr><td><%= submit_tag "pesquisar" %></td></tr>
    </table>
  <% end %>
  </fieldset>
  <br/>
  <table>
  <tr>
    <th>Paciente</th>
    <th>Telefone</th>
    <th>Celular</th>
    <th>Saldo devedor</th>
  </tr>
  <% total = 0.0 %>
  <% @em_debito.each() do |pac| %>
    <tr>
    <td><%= link_to pac.nome , abre_paciente_path(pac)%></td>
    <td><%= pac.telefone %></td>
    <td><%= pac.celular %></td>
    <td align="right" style="color:red;"><%= pac.saldo.real %></td>
    <% total += pac.saldo %>
    </tr>
  <% end %>
  <tr>
  <td>Total</td>
  <td colspan="3"align="right" style="color:red;"><%= total.real %></td>
  </tr>
  </table>
<% end %>