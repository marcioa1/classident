<%= form.label :login %><br/>
<%= form.text_field :login , :size=>10%><br/><br/>
<%= form.label :senha, form.object.new_record? ? nil : "Nova senha" %><br />
<%= form.password_field :password, :size=>8 %><br />
<%= form.label :confirmação_da_senha %><br />
<%= form.password_field :password_confirmation, :size=>8 %><br /><br />
<%= form.label :nome %><br/>
<%= form.text_field :nome%><br/>
<br/>

<%= form.label :email %><br/>
<%= form.text_field :email%><br/>
<br/>
<%= form.label :tipo_usuario %><br/>
<%= form.select :tipo_usuario_id, @tipos_usuario %>
<br/><br/>
<%= form.label :clinicas %><br/>
<%= form.select :clinica_id, options_from_collection_for_select(@clinicas, :id, :nome), :include_blank=>true %>
<br/><br/>
<%= form.check_box :ativo %>
<%= form.label :ativo %>
<p/>
<fieldset class='fieldset_40'>
<table class='transparente'>
<% (0..6).each do |dia| %>
  <tr>
    <td><%= form.check_box "dia_da_semana_#{dia}"%></td>
    <td><%= form.label Date::DAYNAMES[dia] %>  </td>
    <td><%= form.label :Início %> : </td>
    <td><%= form.time_select "hora_de_inicio_"+ dia.to_s %></td>
    <td><%= form.label :Término %> : </td>
    <td><%= form.time_select "hora_de_termino_#{dia.to_s}" %></td>
  </tr>
<% end %>
</table>
</fieldset>