<% content_for :main do %>
<h2>Usuários por nome</h2>
<table border="1">
  <tr>
  	<th width="200px">Nome</th>
    <th width="100px">login</th>
    <th width="100px">Tipo usuário</th>
    <th width="100px">Clinica</th>
    <th width="100px">email</th>
    <th>&nbsp;</th>
  </tr>
  <% @users.each() do |user| %>
  <tr>
  	<td><%= user.nome %></td>
    <td><%= user.login %></td>
    <td><%= user.tipo_usuario.nome%></td>
    <td><%= user.clinica.nome unless user.clinica.nil? %></td>
    <td><%= user.email %></td>
    <td><%= link_to "editar", edit_user_path(user.id) if !user.master or current_user.master %></td>
  </tr>
  <% end %>
</table>
<br/>
<% if current_user.pode_incluir_user %>
 <%= link_to("Novo", new_user_path())%>
 <%  end %>

<% end %>