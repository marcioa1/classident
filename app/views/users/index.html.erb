<% content_for :main do %>
<h3>Usuários por nome</h3ˇ>
<table border="1">
  <tr>
  	<th width="200px">Nome</th>
    <th width="100px">login</th>
    <th width="100px">Tipo usuário</th>
    <th width="100px">Clinicas</th>
    <th width="100px">email</th>
    <th>&nbsp;</th>
  </tr>
  <% @users.each() do |user| %>
  <tr>
  	<td><%= user.nome %></td>
    <td><%= user.login %></td>
    <td><%= user.tipo_usuario.nome%></td>
    <td><%= user.nome_das_clinicas %><td>
    <td><%= user.email %></td>
    <td><%= link_to "editar", edit_user_path(user.id) if current_user.master? %></td>
  </tr>
  <% end %>
</table>
