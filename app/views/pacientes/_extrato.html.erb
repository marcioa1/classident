  <% if !@administracao %>
    <%= link_to "Novo recebimento", new_recebimento_path(:paciente_id=>@paciente.id) %>
    | 
    <%= link_to "Novo débito", new_debito_path(:paciente_id=>@paciente.id) %>
  <% end %>
<br/><br/>
<table>
  <tr>
    <th>Data</th>
    <th width="200px">Descrição</th>
    <th width="70px">Débito</th>
    <th width="70px">Crédito</th>
    <th width="70px">Saldo</th>
    <th>Bom para</th>
    <th>Detalhes</th>
    <th>&nbsp;</th>
  </tr>
  <% saldo         = 0.0 %>
  <% total_debito  = 0.0 %>
  <% total_credito = 0.0 %>
<% @paciente.extrato.each do |lancamento| %>
  <tr>
    <td align="center"><%= lancamento.data.to_s_br%></td>
    <% if lancamento.class == Debito %>
      <% total_debito += lancamento.valor %>
      <td><%= lancamento.descricao %></td>
      <td align="right"><%= link_to lancamento.valor.real, edit_debito_path(lancamento) %></td>
      <td>&nbsp;</td>
      <% saldo -= lancamento.valor %>
    <% else %>
      <% total_credito += lancamento.valor %>
      <td><%= lancamento.observacao_do_recebimento %></td>
      <td>&nbsp;</td>
      <td align="right"><%= link_to lancamento.valor.real, edit_recebimento_path(lancamento) %></td>
      <% saldo += lancamento.valor %>
    <% end %>
    <% cor =  saldo > 0 ? "black" : "red" %>
    <td align="right" style="color: <%= cor %>"><%= saldo.real %></td>
      <% if lancamento.class == Recebimento %>
        <% if lancamento.formas_recebimento.nome.downcase == 'dinheiro' %>
          <td>&nbsp;</td>
        <% else %>
          <td><%= lancamento.cheque.bom_para.to_s_br  if lancamento.cheque.present? && lancamento.cheque.bom_para.present? %></td>    
        <% end %>
       <td><%= lancamento.formas_recebimento.nome %></td> 
      <% else %>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
    <% end %>
    <td><%= link_to 'Excluir', lancamento, :confirm => 'Tem certeza?', :method => :delete %></td>
  <!-- </td> -->
  </tr>
<% end %>
<tr>
	<td align='center'colspan="2">Total</td>
	<td align='right'><%= total_debito.real %></td>
	<td align='right'><%= total_credito.real %></td>
	<td colspan='4'>&nbsp;</td>
</tr>
</table>