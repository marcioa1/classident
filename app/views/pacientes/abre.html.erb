<% content_for :main do %>
 Ficha do paciente (<%= @paciente.codigo %>) : <b><%= @paciente.nome %></b><br/>  


<div id="tabs">
    <ul>
        <li><a href="#fragment-1"><span>Tratamento</span></a></li>
        <li><a href="#fragment-2"><span>Cadastro</span></a></li>
        <li><a href="#fragment-3"><span>Extrato</span></a></li>
    </ul>
    <div id="fragment-1">
        <%= link_to "novo procedimento" , new_tratamento_path(:paciente_id=>@paciente.id) unless session[:clinica_id].to_i == 0 %>
      <%= render :partial=>"tratamento" , :locals=>{:paciente=>@paciente} %>
    </div>
    <div id="fragment-2">
    <%= render :partial=>"edit" , :locals=>{:paciente=>@paciente} %>
    </div>
    <div id="fragment-3">
        <%= render :partial=>"extrato", :locals=>{:paciente=>@paciente} %>
    </div>
</div>
<% end %>