
<% content_for :main do %>
  <div id="tabs">
    <ul>
        <li><a href="#tratamento"><span>Tratamento</span></a></li>
        <li><a href="#orcamento"><span>Orçamento</span></a></li>
        <li><a href="#cadastro"><span>Cadastro</span></a></li>
        <li><a href="#extrato"><span>Extrato</span></a></li>
        <li><a href="#alta"><span>Alta</span></a></li>
        <li><a href="#protetico"><span>Protético</span></a></li>
    </ul>
    <div id="tratamento"><%= render :partial=>"tratamento"  %></div>
    <div id="orcamento"> <%= render :partial=>'orcamento' %>   </div>
    <div id="cadastro">  <%= render :partial=>"edit"  %>      </div>
    <div id="extrato">   <%= render :partial=>"extrato" %>    </div>
    <div id="alta">      <%= render :partial=>"alta" %>       </div>
    <div id="protetico"> <%= render :partial=>"protetico" %>  </div>
  </div>
  <script type="text/javascript">
    $(document).ready(function() {
      $("#tabs").tabs({
        select: function(event, ui){
          document.cookie =  'tab_paciente=' + ui.index; 
          // $.ajax({
          //   url    : "/salva_tab_do_paciente",
          //   type   : "GET",
          //   data   : { "tab_index" : ui.index }
          // });
        }
      });
      $("#tabs").tabs("select", parseInt(getCookie('tab_paciente')));
    });
    
    function getCookie(c_name)
{
if (document.cookie.length>0)
  {
  c_start=document.cookie.indexOf(c_name + "=");
  if (c_start!=-1)
    {
    c_start=c_start + c_name.length+1;
    c_end=document.cookie.indexOf(";",c_start);
    if (c_end==-1) c_end=document.cookie.length;
    return unescape(document.cookie.substring(c_start,c_end));
    }
  }
return "";
}
  </script>
<% end %>

