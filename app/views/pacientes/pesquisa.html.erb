    <div class="ui-widget">
      <input id="iniciais" size="40" class="ui-autocomplete-input"></div>
    </td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td><%= submit_tag "pesquisar", :disabled=>false, :id=>"pesquisar_button" %></td>
  </tr>
</table>
<br/>
<% end %>


