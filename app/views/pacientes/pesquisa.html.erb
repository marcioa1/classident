<% content_for :main do%>
<script type="text/javascript">
  $(function() {
      function busca_por_nome(nome){
        window.location = "/pacientes/0/abre?nome=" + nome
      }

      $("#iniciais").autocomplete({
        source: "pesquisa_nomes",
        minLength: 6,
        maxRows: 5,
        select: function(event,ui){
          nome = ui.item.value;
          busca_por_nome(nome);
        }
      });
    });
</script>
  <% form_tag pesquisa_pacientes_path do %>
<table class="transparente">
  <tr>
    <td>CÃ³digo : </td>
    <td><%= text_field_tag :codigo, params[:codigo], :size=>8, :onblur=>"$('#pesquisar_button').attr('disabled',true); )", :onfocus=>"limpa_nome();" %></td>
  </tr>
  <tr>
    <td>Paciente : </td>
