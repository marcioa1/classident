<% if !@administracao %>
  <%= link_to "Novo procedimento" , new_tratamento_path(:paciente_id=>@paciente.id)  %> 
<% end %>
<br/><br/>
<table>
  <tr>
    <th><br/>Dente</th>
    <th><br/>Face</th>
    <th width="40px"><br/>Código</th>
    <th width="190px"><br/>Descrição</th>
    <th width="60px"><br/>Valor</th>
    <th width="60px"><br/>Custo</th>
    <th><br/>Dentista</th>
    <th>Data de<br/>realização</th>
    <th><br/>Orçamento</th>
  </tr>
<% total = 0.0 %>
<% Tratamento.do_paciente(@paciente.id).each()  do |tratamento|  %>
  <tr>
  <td align="center">
  <% if tratamento.nao_pode_alterar? %>
    <%= tratamento.dente %> 
  <% else %>
    <%= link_to tratamento.dente, edit_tratamento_path(:id=>tratamento.id) %>
  <% end %>
  </td>
  <td><%= tratamento.faces %></td>
    <td><%= tratamento.item_tabela.codigo  unless tratamento.item_tabela.nil? %></td>
    <td><%= link_to tratamento.descricao, edit_tratamento_path(tratamento) %></td>
    <td align="right"><%= tratamento.valor.real%></td>
    <td align="right"><%= tratamento.custo.real%></td>
    <td><%= tratamento.dentista.nome unless tratamento.dentista.nil? %></td>
    <td align="center">
    <% if tratamento.data.to_s_br.blank? %>
      <span id="finalizar_<%=tratamento.id.to_s%>"  >
        <%= link_to "finalizar", "#", :onclick=>'finalizar_tratamento(' + tratamento.id.to_s + ')' %>
      </span>
    <% else %>
      <%= tratamento.data.to_s_br%></td>
    <% end %>
    <td align='center'><%= tratamento.orcamento.numero unless tratamento.orcamento.nil? %></td>
  </tr>
  <% total += tratamento.valor %>
<% end %>
  <tr>
  	<td colspan="4" align="center">Total</td>
    <td align = 'right'><%= total.real %></td>
    <td colspan='4'>&nbsp;</td>
  </tr>
</table>
