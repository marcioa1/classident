<% content_for :main do %>

<h2>Listando abonos</h2>

<table>
  <tr>
    <th>Data</th>
    <th>Clínica</th>
    <th>Paciente</th>
    <th>Valor</th>
    <th>Observação</th>
    <th>Ortodontista</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>

<% @abonos.each do |abono| %>
  <tr>
    <td><%= abono.data.to_s_br %></td>
    <td><%= abono.paciente.clinica.nome %></td>
    <td><%= abono.paciente.nome %></td>
    <td><%= abono.valor.real %></td>
    <td><%= abono.observacao %></td>
    <td><%= abono.paciente.ortodontista.nome %></td>
    <td><%= link_to 'Editar', edit_abono_path(abono) %></td>
    <td><%= link_to 'Apagar', abono, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% end %>