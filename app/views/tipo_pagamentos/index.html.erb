<% content_for :main do %>
<h3>Listando tipos de pagamento</h3>

<table>
  <tr>
    <th width="200px">Nome</th>
    <th>Ativo</th>
    <th>&nbsp;</th>
  </tr>

<% @tipo_pagamentos.each do |tipo_pagamento| %>
  <tr>
    <td><%= link_to tipo_pagamento.nome, edit_tipo_pagamento_path(tipo_pagamento) %></td>
    <td><%=h tipo_pagamento.ativo? ? "sim" : "nÃ£o" %></td>
    <td>
    <% if tipo_pagamento.ativo? %>
      <%= link_to 'desativar', tipo_pagamento, :confirm => 'Tem certeza ?', :method => :delete %>
    <% else %>
      <%= link_to 'reativar', reativar_tipo_pagamento_path(tipo_pagamento) %>
    <% end %>
</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo tipo de pagamento', new_tipo_pagamento_path %>
<% end %>