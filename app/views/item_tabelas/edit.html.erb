<% content_for :main do %>
<fieldset>
    <legend>Editando item da tabela  <%= @tabela.nome %></legend>
<% form_for(@item_tabela) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :código %><br />
    <%= f.text_field :codigo, :size=>9 %>
  </p>
  <p>
    <%= f.label :descrição %><br />
    <%= f.text_field :descricao, :size=>30 %>
  </p>
  <p>
    <%= f.label :ativo %><br />
    <%= f.check_box :ativo %>
  </p>
  <p>
    <%= f.submit 'alterar' %>
  </p>
<% end %>

<%= link_to 'voltar', item_tabelas_path(:tabela_id=>@tabela.id) %>
</fieldset>
<% end %>