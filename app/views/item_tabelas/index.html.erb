<% content_for :main do %>
<h3>Listando items da tabela <%= @tabela.nome %></h3>
<p>
  <%= link_to "Voltar à lista de tabelas", tabelas_path()%> | 
  <%= link_to 'Novo item da tabela', new_item_tabela_path(:tabela_id=>@tabela.id) if current_user.pode_incluir_tabela and @administracao%>
</p>
<table>
  <tr>
    <th width="100px">Código</th>
    <th width="290px">Descrição</th>
    <th width='60px'>Preço</th>
    <th>Ativo</th>
    <th>&nbsp;</th>
  </tr>

<% @item_tabelas.each do |item_tabela| %>
  <tr>
    <td><%=h item_tabela.codigo %></td>
    <td><%= link_to item_tabela.descricao, edit_item_tabela_path(item_tabela) %></td>
    <td align='right'><%=h item_tabela.preco.real %></td>
    <td><%=h item_tabela.ativo ? "sim" : "não" %></td>
    <td><%= link_to 'Excluir', item_tabela, :confirm => 'Tem certeza?', :method => :delete, :class => 'ui-icon ui-icon-trash', :title=>'Excluir'  %></td>
    
  </tr>
<% end %>
</table>

<br />
<%= link_to "Voltar à lista de tabelas", tabelas_path()%> | 
<%= link_to 'Novo item da tabela', new_item_tabela_path(:tabela_id=>@tabela.id) %>

<% end %>