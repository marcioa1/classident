<fieldset class="fieldset_40">

<% form_for(@dentista) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>
  <p>
    <%= f.label :CRO %><br />
    <%= f.text_field :cro, :size=>10 %>
  </p>
  <p>
    <%= f.label :telefone %><br />
    <%= f.text_field :telefone %>
  </p>
  <p>
    <%= f.label :celular %><br />
    <%= f.text_field :celular %>
  </p>
  <p>
    <%= f.label :ativo %><br />
    <%= f.check_box :ativo %>
  </p>
  <fieldset>
    <legend>Cl√≠nicas onde atua :</legend>
    <% @clinicas.each() do |clinica| %>
      <%= check_box_tag "clinica_#{clinica.id}", clinica.id, checked=@dentista.clinicas.include?(clinica) %>  
    <%= clinica.nome %><br/>
    <% end %>
  </fieldset>
  <p>
    <%= f.submit 'alterar' unless session[:clinica_id].to_i > 0 %>
  </p>
<% end %>
</fieldset><br/>
<%= link_to 'voltar', dentistas_path %>

