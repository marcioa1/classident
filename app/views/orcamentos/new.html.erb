<% content_for :main do %>
<fieldset class='fieldset_50'>
<legend>Novo orçamento</legend>
<% @tratamentos = Tratamento.do_paciente(@paciente.id).nao_feito.sem_orcamento%>
<% if @tratamentos.empty? %>
  <h3>Não há procedimentos a serem orçados</h3>
  <p>
    <%= link_to 'voltar', abre_pacientes_path(:id=>@paciente.id) %>
  </p>
<% else %>
  <%= render :partial => 'tratamentos_a_fazer', :locals=>{:tratamentos=>@tratamentos} %>
  <% form_for(@orcamento) do |f| %>
    <%= f.error_messages %>
    <%= render :partial=>'form', :locals=>{:f=>f} %>
  <% end %>

  <%= link_to 'voltar', abre_pacientes_path(:id=>@paciente.id) %>
  </fieldset>
  <% end %>
<% end %>