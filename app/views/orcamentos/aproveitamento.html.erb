<% content_for :main do %>
  <h3>Aproveitamento de Orçamento</h3>
  <% form_tag :url=>producao_geral_dentistas_path do %>
    <%= label_tag "Entre : " %>
    <%= text_field_tag :datepicker, @data_inicial.to_s_br, :size=>10 %>
    <%= label_tag " e : " %>
    <%= text_field_tag :datepicker2, @data_final.to_s_br, :size=>10 %>
    <%= submit_tag "pesquisar"%>
  <% end %>
  <p/>
  <table>
    <tr>
      <th>Dentista</th>
      <th>Clínica</th>
      <th>Paciente</th>
      <th>Valor</th>
      <th>Status</th>
    </tr>
  <% @orcamentos.each do |orca| %>
    <tr>
      <td><%= orca.dentista.nome if orca.dentista.present? %></td>
      <td><%= orca.paciente.clinica.nome %></td>
      <td><%= orca.paciente.nome %></td>
      <td align='right'><%= orca.valor.real %></td>
      <td><%= orca.estado %></td>
    </tr>
     
  <% end %>
  </table>
<% end %>