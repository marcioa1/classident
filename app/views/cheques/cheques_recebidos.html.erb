<% content_for :main do %>
  <%= @cheques.size %> Cheques recebidos
<% form_tag cheques_recebidos_cheques_path do %>
  <p>
  <%= label_tag :data_inicial %> : <%= text_field_tag :datepicker, (Date.today - Date.today.day.days + 1.day).to_s_br, :size=>10 %>

  <%= label_tag :data_final %> : <%= text_field_tag :datepicker2, 
          params[:datepicker2].blank? ? Date.today.to_s_br : params[:datepicker2].to_date.to_s_br, :size=>10  %>
  </p>
opcao anterior : <%= params[:opcao]%>
  <br/>
    <table class="transparente">
      <tr>
        <td><%= radio_button_tag :opcao, :todos ,params[:opcao]=="todos" %> <%= label_tag :todos %></td>
        <td><%= radio_button_tag :opcao, :destinacao, params[:opcao]=="destinacao" %> <%= label_tag :destinação %></td>
        <td><%= radio_button_tag :opcao, :administracao, params[:opcao]=="administracao" %> <%= label_tag :administração %></td>
        <td><%= radio_button_tag :opcao, :reapresentados, params[:opcao]=="reapresentados" %> <%= label_tag :reapresentados %></td>
        <td><%= radio_button_tag :opcao, :solucionados, params[:opcao]=="solucionados" %> <%= label_tag :solucionados %><br/></td>
      </tr>
      <tr>
        <td><%= radio_button_tag :opcao, :usados_para_pagamento, params[:opcao]=="usados_para_pagamento"%> <%= label_tag :usados_para_pagamento %></td>
        <td><%= radio_button_tag :opcao, :disponiveis, params[:opcao]=="disponiveis" %> <%= label_tag :disponíveis %></td>
        <td><%= radio_button_tag :opcao, :devolvidos, params[:opcao]=="devolvidos" %> <%= label_tag :devolvidos %></td>
        <td><%= radio_button_tag :opcao, :devolvido_2_vezes, params[:opcao]== "devolvido_2_vezes" %> <%= label_tag :devolvidos_2a_vez %></td>
        <td><%= radio_button_tag :opcao, :spc ,params[:opcao]=="spc"%> <%= label_tag :SPC %></td>
        <td><%= radio_button_tag :opcao, :arquivo_morto, params[:opcao]=="arquivo_morto" %> <%= label_tag :arquivo_morto %></td>
      </tr>
    </table>

  <%= submit_tag "pesquisar"%>
<% end %>
<br/>
<table>
  <tr>
    <th>Bom para</th>
    <th width="170px">Paciente</th>
    <th width="60px">Valor</th>
    <th width="140px">Banco</th>
    <th>Agência</th>
    <th>Conta corrente</th>
    <th>Número</th>
    <th>Adm</th>
    <th>Situação</th>
  </tr>
  <% total = 0 %>
  <% for cheque in @cheques do %>
  <tr>
    <td align="center"><%= link_to cheque.bom_para.to_s_br, edit_cheque_path(cheque) %></td>
    <td><%= cheque.recebimento.paciente.nome %></td>
    <td align="right"><%= cheque.recebimento.valor.real %></td>
    <td align="center"><%= cheque.banco.numero + "-"+ cheque.banco.nome %></td>
    <td><%= cheque.agencia  %></td>
    <td><%= cheque.conta_corrente %></td>
    <td><%= cheque.numero %></td>
    <td><% if cheque.entregue_a_administracao?  %>
          <%= image_tag "ok.png" %>
          <%= cheque.data_entrega_administracao.to_s_br %>
        <% else if cheque.disponivel? %>
               <%= check_box_tag "adm_"+cheque.id.to_s %>
        <% end %>
        <% end %>
    </td>
    <td><%= cheque.status %></td>
    
  </tr>
  <% total += cheque.valor %>
  <% end %>
  <tr>
    <td colspan="2" align="center">Total</td>
    <td align="right"><%= total.real%></td>
    <td colspan="6" align="right"><%= link_to "enviar cheques selecionados p/ administração" , "#", :onclick=>"enviar_administracao();"  if params[:opcao]=="disponiveis"%></td>
  </tr>
</table>
<% end %>
