<% content_for :main do %>
<fieldset>
<legend>Editando cheque</legend>

<% form_for(@cheque) do |f| %>
  <%= f.error_messages %>
 <%= f.hidden_field :paciente_id %>
  <%= f.hidden_field :clinica_id %>

  <p>
    <%= f.label :paciente %> : <%= @cheque.recebimento.paciente.nome %>
  </p>

  <p>
     <%= f.label :banco %> : 
     <%= f.select :banco_id, options_for_select(@bancos)  %>
  </p>
  <p>
     <%= f.label :agencia %> : 
     <%= f.text_field :agencia, :size=>7 %>
     <%= f.label :conta_corrente %> : 
     <%= f.text_field :conta_corrente, :size=>7 %>
     <%= f.label :nÃºmero %> : 
     <%= f.text_field :numero, :size=>7 %>
  </p>
  <p>
    <%= f.label :valor %>
    <%= f.text_field :valor, :size=>8%>
  </p>
  <p>
      <%= f.label :bom_para %>
      <%= text_field_tag :datepicker2, Date.today.to_s_br, :size=>10 %>
    </p>
 <p>
 	<%= check_box_tag :uma_devolucao, false , options={ :onclick=>"abre_uma_devolucao();"}%> devolvido uma vez
 </p>
 <% @cheque.data_primeira_devolucao = Date.today %>
  <% if @cheque.devolvido_uma_vez? %>
  <div id="uma_devolucao" style="display:none;">
    <p>
      <%= f.label :data_primeira_devolucao %>	
      <%= text_field_tag :datepicker3, Date.today.to_s_br, :size=>10 %>
    </p>
  </div>
  <% end %>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @cheque %> |
<%= link_to 'Back', cheques_path %>
</fieldset>
<% end %>