<% content_for :main do %>
<fieldset class="fieldset_50">
<legend>Editando cheque ( <%= @cheque.id%> )</legend>

<% form_for(@cheque) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :clinica_id %>

  <div>
    <%= f.label :paciente %> : <%= @cheque.nome_dos_pacientes %>
  </div>

  <div>
     <%= f.label :banco %> : 
     <%= f.select :banco_id, options_for_select(@bancos, @cheque.banco_id.to_i)  %>
  </div>
  <div>
     <%= f.label :agencia %> : 
     <%= f.text_field :agencia, :size=>7 %>
  </div>
  
  <div>
     <%= f.label :número_do_cheque %> : 
     <%= f.text_field :numero, :size=>7 %>
  </div>
  <div>
    <%= f.label :valor %> :
    <%= f.text_field :valor_real, :size=>8, :disabled=> @cheque.para_mais_de_um_paciente? %>
  </div>
  <div>
    <%= f.label :bom_para %> :
    <%= text_field_tag :datepicker, Date.today.to_s_br, :size=>10 %>
  </div>
 <p>
    <%= check_box_tag :uma_devolucao, 1, checked=@cheque.devolvido_uma_vez? , options={ :onclick=>"abre_uma_devolucao();"}%> devolvido uma vez
 </p>
 <%# @cheque.data_primeira_devolucao = Date.today %>
  <% if @cheque.devolvido_uma_vez? %>
    <div id="devolvido_uma_vez" >
  <% else %>
    <div id="devolvido_uma_vez" style="display:none;">
  <% end %>
    <fieldset>
      <legend>Primeira devolução</legend>
      <div>
        <%= f.label :data_primeira_devolução %> :   
        <%= text_field_tag :datepicker2, @cheque.data_primeira_devolucao.to_s_br, :size=>10 %>
      </div>
      <div>
        <%= f.label :motivo %> :
        <%= f.text_field :motivo_primeira_devolucao, :size=>20 %>
      </div>
    </fieldset>
  </div>
    <p>
        <%= check_box_tag :reapresentacao, 'reapresentado', checked=@cheque.reapresentado? , options={ :onclick=>"abre_reapresentacao();"}%> reapresentado
     </p>
    <% if @cheque.reapresentado? %>
      <div id="reapresentado" >
    <% else %>
      <div id="reapresentado" style="display:none">
    <% end %>
    <fieldset>
      <legend>Reapresentação</legend>
      <div>
        <%= f.label :data_da_reapresentação %> :
        <%= text_field_tag :datepicker3, @cheque.data_reapresentacao.to_s_br, :size=>10%>
      </div>
      </fieldset>
        <p>
            <%= check_box_tag :segunda_devolucao, 1, checked=@cheque.devolvido_duas_vezes? , options={ :onclick=>"abre_segunda_devolucao();"}%> segunda devolução
         </p>
        <% if @cheque.devolvido_duas_vezes? %>
          <div id="devolvido_duas_vezes" >
        <% else %>
          <div id="devolvido_duas_vezes" style="display:none">
        <% end %>
        <p class="borda_dupla">
          <%= f.label :data_da_segunda_devolução %>
        <%= text_field_tag :datepicker4, @cheque.data_segunda_devolucao, :size=>10%>
		<%= f.label :motivo %>    
        <%= f.text_field :motivo_segunda_devolucao, :size=>10 %>
        </p>
        </div>
      </div>
  </div>
  <% if @cheque.entregue_a_administracao %>
  <p>Entregue à Administração em <%= @cheque.data_entrega_administracao.to_s_br %></p>
  <% end %>
  <% if @cheque.recebimentos.size == 1%>
    <p>
      Ao alterar o valor deste cheque, o valor de respectivo recebimento também será alterado, juntamente com o extrato do paciente
    </p>
  <% end %>
  <p>
    <%= f.submit 'Update' unless @cheque.entregue_a_administracao || @cheque.para_mais_de_um_paciente? %>
  </p>
<% end %>
<%= link_to 'voltar', :back %>
<% #TODO volta via javascript para voltar a página com pesquisa %>
</fieldset>
<% end %>