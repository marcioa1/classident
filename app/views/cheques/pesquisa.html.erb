<% content_for :main do %>
  <h3>Pesquisa Cheque</h3>
  <% form_tag pesquisa_cheques_path do %>
    <table class='transparente'>
      <tr>
        <td>Banco</td>
        <td>Número</td>
        <td>Valor</td>
        <td>&nbsp;</td>
      </tr>
      <tr>
        <td><%= select_tag :banco, options_for_select(@bancos, params[:banco] )%></td>
        <td><%= text_field_tag :numero, params[:numero], :size=>10 %></td>
        <td><%= text_field_tag :valor, params[:valor], :size=>10 %></td>
        <td><%= submit_tag "Pesquisar"%></td>
      </tr>
    </table>
  <% end %>
  <p>
    <%= @cheques.size %> cheques encontrados.
  </p>
  <table>
    <th>seq</th>
    <th>Agência</th>
    <th>Número</th>
    <th>Bom para</th>
    <th>Valor</th>
    <th>Paciente</th>
    <th>Estado</th>
    <% if administracao? %>
      <th>Clínica</th>
    <% end %>
    <% @cheques.each do |cheque| %>
      <tr>
        <td><%= cheque.id %></td>
        <td><%=cheque.agencia%></td>
        <td><%=cheque.numero%></td>
        <td><%=cheque.bom_para.to_s_br%></td>
        <td align='right'><%=cheque.valor.real%></td>
        <td><%= cheque.recebimento.paciente.nome unless cheque.recebimento.paciente.nil? %></td>
        <td>
          <% if cheque.usado_para_pagamento? %>
            <%= link_to cheque.status, "#", :onclick=>'abre_pagamento( ' + cheque.pagamento_id.to_s + ')'%>
          <% else %>
            <%=  cheque.status %>
          <% end %>
        </td>
        <% if administracao? %>
          <td><%= cheque.clinica.nome %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>